<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="eurekaclinical-user-service-jpa-unit"
		transaction-type="RESOURCE_LOCAL">
		<class>org.eurekaclinical.user.common.entity.RoleEntity</class>
		<class>org.eurekaclinical.user.common.entity.UserEntity</class>
		<class>org.eurekaclinical.user.common.entity.LocalUserEntity</class>
		<class>org.eurekaclinical.user.common.entity.OAuthUserEntity</class>
		<class>org.eurekaclinical.user.common.entity.LdapUserEntity</class>
		<class>org.eurekaclinical.user.common.entity.OAuthProvider</class>
		<class>org.eurekaclinical.user.common.entity.AuthenticationMethodEntity</class>
		<class>org.eurekaclinical.user.common.entity.LoginTypeEntity</class>
		
		<properties>
			<!-- Disable the second-level cache -->
			<property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider" />
			<property name="hibernate.connection.driver_class" value="org.h2.Driver" />
			<property name="hibernate.connection.url" value="jdbc:h2:mem:eurekaclinical-user-service-test" />
			<property name="hibernate.connection.username" value="sa" />
			<property name="hibernate.connection.password" value="" />
			<property name="hibernate.connection.pool_size" value="1" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect" />
			<property name="hibernate.hbm2ddl.auto" value="create-drop" />

			<!-- Default is false for backwards compatibility. Should be used on all
				new projects -->
			<property name="hibernate.id.new_generator_mappings" value="true" />
		</properties>
	</persistence-unit>
</persistence>
